import java.util.Scanner;


public class Main
{
	public static void main(String[] args) {
		Scanner nome = new Scanner (System.in);
		String palavra;
		
		System.out.println("Digite uma palavra qualquer: ");
		palavra = nome.nextLine();
		System.out.println("-----------");
		
		int i = 1;
		
		while(i < 6){
		    System.out.println( "Sua palavra foi digitada " + i + " : " + palavra);
		    i++;
		}
	}
}
